<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <item name="colorAccent">@color/pink_a_200</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.CameraButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="android:layout_marginStart">@dimen/camera_button_padding</item>
        <item name="android:layout_marginEnd">@dimen/camera_button_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
